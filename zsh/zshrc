#!/bin/zsh
# Places you into current directory
pushd $(dirname $0) > /dev/null


# Loading common components
if [ -f ../commonrc ]; then
  pushd .. > /dev/null
  source commonrc
  popd > /dev/null
fi

# Compinit
source compinstall

# Conf from gmrl
source config

# RVM
source rvm

# Loading prompt
source prompt

# zsh-syntax-highlighting, MUST stay last
source zsh-syntax-highlighting


# Comes back into previous directory
popd > /dev/null
